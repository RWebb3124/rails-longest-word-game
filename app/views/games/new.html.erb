<div class="container">
  <h1>Your letters:</h1>
  <div class="p-container">
    <% @letters.each do |letter| %>
      <div>
        <p class="text-nowrap d-inline random-letter" width="100"><%= letter %></p>
      </div>
    <% end %>
  </div>
  <h4 class="mb-3">What is the longest word you can find?</h4>
  <form action="/score" data-turbo="false" method="post" class="form-inline">
    <%= hidden_field_tag :grid, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="input-group mb-3">
      <input type="text" name="answer" class="form-control" placeholder="Answer" aria-label="Recipient's username" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <input type="submit" class="input-group-text" value = "Play" id="basic-addon2">
     </div>
    </div>
  </form>
</div>
